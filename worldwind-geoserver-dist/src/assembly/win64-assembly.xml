<assembly>
    <id>win64</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <componentDescriptors>
        <componentDescriptor>src/assembly/licenses.xml</componentDescriptor>
        <componentDescriptor>src/assembly/geoserver.xml</componentDescriptor>
        <componentDescriptor>src/assembly/jetty.xml</componentDescriptor>
        <componentDescriptor>src/assembly/java-win64.xml</componentDescriptor>
        <componentDescriptor>src/assembly/gdal-win64.xml</componentDescriptor>
        <componentDescriptor>src/assembly/data-base.xml</componentDescriptor>
        <componentDescriptor>src/assembly/data-nasa.xml</componentDescriptor>
        <componentDescriptor>src/assembly/explorer.xml</componentDescriptor>
    </componentDescriptors>    
    <fileSets>
        <fileSet>
            <!-- GeoServer startup and shutdown batch files--> 
            <directory>src/main/resources/bin</directory>
            <lineEnding>keep</lineEnding>
            <outputDirectory>worldwind-geoserver-${project.version}/bin</outputDirectory>
            <includes>
                <include>*.bat</include>
            </includes>
        </fileSet>
        <fileSet>
            <!-- Windows environment run and stop scripts -->
            <directory>src/main/resources/windows</directory>
            <outputDirectory>worldwind-geoserver-${project.version}</outputDirectory>
            <lineEnding>keep</lineEnding>
            <includes>
                <include>*.bat</include>
            </includes>       
        </fileSet>
    </fileSets>
</assembly>
